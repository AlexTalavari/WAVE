        }

        .widget .widget-head {
            height: 63px;
            line-height: 63px;
            padding: 0;
        }

        .widget.widget-tabs > .widget-head ul li { height: 65px !important; }

        .widget.widget-tabs > .widget-head ul li a {
            height: 65px;
            padding: 0;
            width: 120px;
        }

        .widget.widget-tabs > .widget-head ul li:hover a {
            height: 65px;
            padding: 0;
            width: 120px;
        }

        .widget.widget-tabs > .widget-head ul li a div p:nth-child(1) { margin-top: 6px !important; }
    </style>
}

@section FooterScripts
{

    <script type="text/javascript">
        $("#volunteerbtn").mouseenter(function() {
            $("#volunteerbtn").html('<i class="fa fa-fw fa-times"></i>Unfollow');

        });
        $("#volunteerbtn").mouseleave(function() {
            $("#volunteerbtn").html('<i class="fa fa-fw fa-check"></i>Following!');
        });
        $("#volunteerbtn1").mouseenter(function() {
            $("#volunteerbtn1").addClass("btn-stroke");
        });
        $("#volunteerbtn1").mouseleave(function() {
            $("#volunteerbtn1").removeClass("btn-stroke");
        });
        $(document).ready(function() {
            var w = $(window).width();
            var nw = w - 308;
            $("#progressbar").width(nw);
        });

        jQuery(document).ready(function() {
            jQuery("#ProfileActionId").val('@Model.CurrentUser.Account.UserName');
            jQuery("#BannerActionId").val('@Model.CurrentUser.Account.UserName');
        });
    </script>
}
