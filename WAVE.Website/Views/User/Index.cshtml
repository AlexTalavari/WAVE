    <style>
        #uploadImgBtn {
            float: right;
            font-size: 23px;
            margin-right: 15px;
            margin-top: 15px;
            opacity: 0;
            transition: opacity 1s ease, visibility 1s ease;
            visibility: hidden;
        }

        .box:hover > #uploadImgBtn {
            opacity: 1;
            visibility: visible !important;
        }

        .widget.widget-tabs > .widget-head ul li.active { height: 65px !important; }

        .widget {
            border: none;
