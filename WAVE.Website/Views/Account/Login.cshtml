@model LoginModel


@section FooterScripts {
    @Scripts.Render("~/bundles/jqueryval")

}

<div class="layout-app">
    <!-- row-app -->
    <div class="row row-app">

        <!-- col -->
        <!-- col-separator.box -->
        <div class="col-separator col-unscrollable box">

            <!-- col-table -->
            <div class="col-table">

                <h4 class="innerAll margin-none border-bottom text-center"><i class="fa fa-lock"></i>@Resources.LoginMsg1</h4>

                <!-- col-table-row -->
                <div class="col-table-row">

                    <!-- col-app -->
                    <div class="col-app col-unscrollable">

                        <!-- col-app -->
                        <div class="col-app">
                            <div class="login">
                                <div class="placeholder text-center"><i class="fa fa-lock"></i></div>
                                <div class="panel col-sm-6 col-sm-offset-3">

                                    <div class="panel-body">
                                        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = Request.QueryString["ReturnUrl"]}, FormMethod.Post, new {style = "margin-top:15px;", @id = "signupForm", @class = "form-horizontal ng-pristine ng-valid text-center"}))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary()

                                            <div class="form-group">
                                                <label for="exampleInputEmail1">@Resources.LoginUsername</label>
                                                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", id = "exampleInputEmail1", placeholder = Resources.PlaceholderUsername})
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputPassword1">@Resources.LoginPassword</label>@Html.PasswordFor(m => m.Password, new {@class = "form-control", id = "exampleInputPassword1", placeholder = Resources.PlaceholderPassword})
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-block">@Resources.LoginLogin</button>

                                            <div class="checkbox">
                                                <label>
                                                    @Html.CheckBoxFor(m => m.RememberMe, new {@style = "float:none;"})
                                                    @Resources.LoginRemember
                                                </label>
                                            </div>
                                        }

                                    </div>

                                </div>
                                <div class="col-sm-2 col-sm-4 col-sm-offset-4 text-center">
                                    <a href="/Account/Register" class="btn btn-info">@Resources.LoginNoAccount</a>
                                </div>


                            </div>


                        </div>
                        <!-- // END col-app -->

                    </div>
                    <!-- // END col-app.col-unscrollable -->

                </div>
                <!-- // END col-table-row -->

            </div>
            <!-- // END col-table -->

        </div>
        <!-- // END col-separator.box -->


    </div>
    <!-- // END row-app -->

</div>