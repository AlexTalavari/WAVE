@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="layout-app">
    <!-- row-app -->
    <div class="row row-app">

        <!-- col -->
        <!-- col-separator.box -->
        <div class="col-separator col-unscrollable box">

            <!-- col-table -->
            <div class="col-table">

                <h4 class="innerAll margin-none border-bottom text-center"><i class="fa fa-lock"></i>@Resources.RegisterCreatAnAccount</h4>

                <!-- col-table-row -->
                <div class="col-table-row">

                    <!-- col-app -->
                    <div class="col-app col-unscrollable">

                        <!-- col-app -->
                        <div class="col-app">
                                
                            <div class="panel col-sm-6 col-sm-offset-3">

                                @Html.ValidationSummary()
                                <div class="panel-body">

                                    @using (Html.BeginForm("Register", "Account", new {ReturnUrl = Request.QueryString["ReturnUrl"]}, FormMethod.Post, new {style = "margin-top:15px;", @id = "signupForm", @class = "form-horizontal ng-pristine ng-valid text-center"}))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", id = "inputEmail3", placeholder = Resources.PlaceholderUsername})
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(m => m.Name, new {@class = "form-control", id = "inputEmail3", placeholder = Resources.PlaceholderName})
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(m => m.Surname, new {@class = "form-control", id = "inputEmail3", placeholder = Resources.PlaceholderSurname})
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", id = "inputEmail3", placeholder = Resources.PlaceholderEmail})
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", id = "inputPassword3", placeholder = Resources.PlaceholderPassword})
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-12">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", id = "inputPassword3", placeholder = Resources.PlaceholderConfirmPassword})
                                            </div>
                                        </div>
                                        <div class="form-group text-left">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6">
                                                    <div class="checkbox">
                                                        <label>

                                                            <input data-val="false" data-val-required="The Agree To Terms field is required." id="termsChkBox" name="AgreeToTerms" style="float: none;" type="checkbox" value="false">
                                                            <input name="AgreeToTerms" type="hidden" value="false">
                                                            @Resources.RegisterTerms0 <a href="/WAVE/Terms">@Resources.RegisterTerms</a>


                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 text-right">
                                                <button type="submit" class="btn btn-stroke btn-primary" disabled="disabled" id="registerBtn">
                                                    <i class="fa fa-sign-in"></i><span style="margin-left: 10px; padding: 15px;">@Resources.Register</span>
                                                </button>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div class="col-sm-2 col-sm-4 col-sm-offset-4 text-center">
                                    <a href="/Account/Login" class="btn btn-info">@Resources.RegisterHaveAnAccount</a>
                                </div>
                                   
                            </div>
                            @Html.Partial("~/Views/Shared/LayoutPartials/_Footer.cshtml")


                            


                        </div>
                        <!-- // END col-app -->

                    </div>
                    <!-- // END col-app.col-unscrollable -->

                </div>
                <!-- // END col-table-row -->

            </div>
            <!-- // END col-table -->

        </div>
        <!-- // END col-separator.box -->


    </div>
    <!-- // END row-app -->

</div>